<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    android:padding="15dp"
    >
    <TextView
        android:id="@+id/rtv_1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text = "注  册"
        android:textSize="30sp"
        android:gravity="center"/>
    <EditText
        android:id="@+id/ret_1"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:background="@drawable/bg_register"
        android:hint="姓  名"
        android:gravity="center"
        android:layout_below="@id/rtv_1"
        android:layout_marginTop="15dp"/>
    <TextView
        android:id="@+id/rtv_2"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:padding="10dp"
        android:text="    身  份  ："
        android:background="@drawable/bg_register"
        android:layout_below="@id/ret_1"
        android:layout_marginTop="10dp"
        android:textSize="15sp"/>
    <RadioGroup
        android:id="@+id/rrg_1"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_below="@id/ret_1"
        android:layout_marginTop="10dp"
        android:gravity="right"
        android:paddingRight="30dp"
        android:paddingTop="5dp"
        android:orientation="horizontal">
        <RadioButton
            android:id="@+id/rrb_1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="宿管"
            android:textSize="20sp"/>
        <RadioButton
            android:id="@+id/rrb_2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="50dp"
            android:text="学生"
            android:textSize="20sp"/>
    </RadioGroup>
    <EditText
        android:id="@+id/ret_2"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:background="@drawable/bg_register"
        android:hint="学  号"
        android:gravity="center"
        android:layout_below="@id/rtv_2"
        android:layout_marginTop="10dp"/>
    <EditText
        android:id="@+id/ret_3"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:background="@drawable/bg_register"
        android:hint="6-10位密码"
        android:gravity="center"
        android:layout_below="@id/ret_2"
        android:layout_marginTop="10dp"
        android:maxLength="10"
        android:inputType="textPassword"/>
    <EditText
        android:id="@+id/ret_4"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:background="@drawable/bg_register"
        android:hint="再次确认密码"
        android:gravity="center"
        android:layout_below="@id/ret_3"
        android:layout_marginTop="10dp"
        android:maxLength="10"
        android:inputType="textPassword"/>
    <TextView
        android:id="@+id/rtv_3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="#f50606"
        android:layout_below="@id/ret_4"/>
    <EditText
        android:id="@+id/ret_5"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:background="@drawable/bg_register"
        android:hint="手机号"
        android:gravity="center"
        android:layout_below="@id/rtv_3"
        android:layout_marginTop="10dp"
        android:inputType="number"/>
